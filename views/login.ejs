<%- include('partials/header.ejs') %>

<div id="form">
	<div class="container">
		<h1 class="display-3 text-center">Login</h1>
		<hr class="mb-4">
		<form action="/login" method="POST">
			<div class="form-group">
				<input type="text" class="form-control form-control-lg" name="username" placeholder="Enter Username">
			</div>
			<div class="form-group">
				<input type="password" class="form-control-lg form-control" name="password" placeholder="Enter Password">
			</div>
			<button class="btn btn-lg btn-block btn-success">
				Login
			</button>
		</form>
	</div>
</div>

