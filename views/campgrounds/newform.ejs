<%- include('../partials/header') %>

	<div id="form">
		<div class="container px-3 mb-5">
			<h1 class="display-3"> Add a new campground </h1>
			<p class="lead">Share your amazing camping experience with the world !!!</p>
			<hr class="mb-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control form-control-lg" type="text" id="name" placeholder="Enter Name" name="camp[name]">
				</div>
				<div class="form-group">
					<input class="form-control form-control-lg" type="text" placeholder="Enter image URL" name="camp[image]">
				</div>
				<div class="form-group">
					<input class="form-control form-control-lg" type="text" placeholder="Enter campground location" name="camp[location]">
				</div>
				<div class="form-group">
					<input class="form-control form-control-lg" type="text" placeholder="Enter one night price" name="camp[price]">
				</div>
				<textarea name="camp[description]" class="form-control mb-4 lead" placeholder="Enter description" cols="30" rows="10"></textarea>
				<button class="btn btn-lg btn-block btn-warning">
					Submit
				</button>
			</form>
    	</div>
	</div>

<%- include('../partials/footer') %>

