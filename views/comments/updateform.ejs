<%- include("../partials/header") %>

<div id="form">
	<div class="container px-3" id="form">
		<h1 class="display-3 display-md-1 text-center mb-4">
			 Update comment
		</h1>
		<hr>
		<form action = "/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT"  method="POST">
			<div class="form-group">
				  <input class="form-control form-control-lg" type="text" value="<%=comment.text%>" name="updatedcomment[text]">
			 </div>
			<div class="form-group">
				  <input class="form-control form-control-lg" type="text" value="<%=comment.stars%>" name="updatedcomment[stars]">
			 </div>
			 <button class="btn btn-lg btn-block btn-warning">
				 Submit
			 </button>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>