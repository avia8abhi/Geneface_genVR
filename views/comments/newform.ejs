<%- include("../partials/header") %>

<div id="form">
	<div class="container px-3" id="form">
		<h1 class="display-3 display-md-1 text-center mb-4">
			 Comment to <%= camp.name %>
		</h1>
		<hr>
		<form action = "/campgrounds/<%= camp._id %>/comments"  method="POST">
			<div class="form-group">
				  <input class="form-control form-control-lg" type="text" placeholder="Enter comment" name="comment[text]">
			 </div>
			<div class="form-group">
				  <input class="form-control form-control-lg" type="text" placeholder="Enter rating out of 5" name="comment[stars]">
			 </div>
			 <button class="btn btn-lg btn-block btn-warning">
				 Submit
			 </button>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>